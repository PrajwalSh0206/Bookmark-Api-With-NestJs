generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  createdAt DateTime   @default(now())
  firstName String?
  hash      String
  lastName  String?
  updatedAt DateTime   @default(now())
  bookmarks  Bookmark[]

  @@map("users")
}

model Bookmark {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  link        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("bookmarks")
}
